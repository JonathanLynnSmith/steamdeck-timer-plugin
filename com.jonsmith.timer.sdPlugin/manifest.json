{
  "$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",

  "Actions": [
    {
      "UUID": "com.jonsmith.timer.action",
      "Name": "Timer",
      "Tooltip": "Countdown timer for Stream Deck+",
      "Icon": "Images/actionIcon",
      "States": [
        {
          "Image": "Images/actionIcon"
        }
      ],
      "Controllers": ["Encoder", "Keypad"],
      "SupportedInMultiActions": false
    }
  ],

  "LayoutResolutions": {
    "timerLayout": {
      "Path": "Layouts/timerLayout.json"
    }
  },

  "Author": "Jonathan Smith",
  "Description": "A simple dial-controlled countdown timer.",
  "Name": "Timer Plugin",
  "Version": "1.0.0",

  "CodePath": "index.html",
  "SDKVersion": 2,

  "Software": {
    "MinimumVersion": "6.0"
  },

  "OS": [
    {
      "Platform": "windows",
      "MinimumVersion": "10"
    }
  ],

  "UUID": "com.jonsmith.timer"
}
