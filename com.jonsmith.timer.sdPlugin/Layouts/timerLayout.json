{
    "$schema": "https://schemas.elgato.com/streamdeck/plugins/layout.json",
    "id": "timerLayout",
    "items": [
      {
        "type": "text",
        "key": "title",
        "rect": [0, 0, 200, 50],
        "alignment": "center",
        "color": "#FFFFFF",
        "font": { "size": 42, "weight": 700 }
      },
      {
        "type": "bar",
        "key": "progress",
        "rect": [10, 55, 180, 25],
        "range": { "min": 0, "max": 100 },
        "bar_bg_c": "#333333",
        "bar_fill_c": "#00BFFF",
        "border_w": 2
      },
      {
        "type": "text",
        "key": "status",
        "rect": [0, 82, 200, 18],
        "alignment": "center",
        "color": "#AAAAAA",
        "font": { "size": 18, "weight": 400 }
      }
    ]
  }
  